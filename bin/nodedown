#!/usr/bin/env ruby
require 'pathname'
ENV['BUNDLE_GEMFILE'] ||= File.expand_path('../../Gemfile', Pathname.new(__FILE__).realpath)
require 'bundler/setup'

require 'chef/config'
require 'simple_config'
require 'node'

puts 'Destroyed the following node:'.green
SimpleConfig.nodes.split.each do |name|
  puts name.green
  Node.new.delete(name)
end
